#include<iostream>
#include<string>
using namespace std;
int main() {
	string s;
	int max = 1;
	getline(cin, s);
	int n = s.length();
	for (int i = 0; i < n - 1; i++) {
		int temp;
		if (s[i] == s[i + 1]) {
			temp = 2;
			int j = i + 1, k = i;
			for (; k > 0 && j < n - 1; k--, j++) {
				if (s[k - 1] == s[j + 1]) {
					temp += 2;
				}
				else {
					break;
				}
			}
			max = (temp > max) ? temp : max;
		}
		if (s[i] == s[i + 2]) {
			temp = 3;
			int j = i + 2, k = i;
			for (; k > 0 && j < n - 1; k--, j++) {
				if (s[k - 1] == s[j + 1]) {
					temp += 2;
				}
				else {
					break;
				}
			}
			max = (temp > max) ? temp : max;
		}
	}
	cout << max << endl;
	cin.get();
	return 0;
}
